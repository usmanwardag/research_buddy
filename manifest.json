{
    "manifest_version": 2,
  
    "name": "Research Buddy",
    "description": "This extension will analyze a paper",
    "version": "1.0",

    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab"
     ],
     "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "browser_action": {
        "default_popup": "popup.html"
      },
      "commands": {
        "toggle-feature": {
          "suggested_key": {
            "default": "Ctrl+Shift+E",
            "mac": "Command+Shift+E"
           },
          "description": "Send a 'toggle-feature' event to the extension"
        }
      }
}